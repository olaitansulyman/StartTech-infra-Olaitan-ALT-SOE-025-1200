aws_region = "us-east-1"
project_name = "starttech"
environment = "prod"

vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

instance_type = "t3.micro"
min_size = 2
max_size = 6
desired_capacity = 2

log_group_name = "/aws/starttech/application"

# MongoDB Atlas Configuration
mongodb_atlas_public_key  = "your-public-key-here"
mongodb_atlas_private_key = "your-private-key-here"
mongodb_atlas_org_id      = "your-org-id-here"
mongodb_atlas_password    = "your-secure-password-here"
use_secrets_manager       = false
mongodb_secret_name       = "starttech-mongodb-secret"

# S3 bucket name will be auto-generated with account ID to ensure uniqueness
# Example: starttech-frontend-starttech-123456789012

tags = {
  Project     = "StartTech"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "DevOps Team"
}